---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';

const contactInfo = {
  address: "Plot No-977,IDA, Phase V, Rami Reddy Nagar, Jeedimetla, Hyderabad, Telangana,500055 üìç",
  email: "project.techpi@gmail.com",
  phone: "+91 8197496989 | 7032901979",
  workingHours: "Monday - Saturday: 9:00 AM - 6:00 PM"
};

const schema = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "mainEntity": {
    "@type": "Organization",
    "name": "Tech Manufacturing",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "123 Manufacturing Street",
      "addressLocality": "Industrial District",
      "addressRegion": "City",
      "addressCountry": "Country"
    },
    "email": contactInfo.email,
    "telephone": contactInfo.phone,
    "openingHours": "Mo-Sa 09:00-18:00"
  }
};
---

<Layout
  title="Contact Us | Tech Manufacturing"
  description="Get in touch with Tech Manufacturing for all your Cable Tray and Low Voltage Panel needs. We're here to help with your electrical infrastructure projects."
>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <PageHeader
    title="Contact Us"
    description="Professional solutions for your electrical infrastructure needs"
    image="/images/facility.jpg"
  />

  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <div>
          <h2 class="text-3xl font-bold mb-6">Get in Touch</h2>
          <p class="text-gray-600 mb-8">
            Have questions about our products or services? Fill out the form below and our team will get back to you shortly.
          </p>
          
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div >
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                  required
                />
              </div>
              <div>
                <label for="company" class="block text-sm font-medium text-gray-700 mb-1">Company</label>
                <input type="text" id="company"
                  name="company"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                  required>
              </div>
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
              <input
                type="text"
                id="subject"
                name="subject"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                required
              />
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                required
              ></textarea>
            </div>
            
            <button
              id="submitButton"
              type="button"
              class="w-full bg-primary text-white py-3 px-6 rounded-lg hover:bg-opacity-90 transition-colors"
            >
              Send Message
            </button>
          </form>

          <script>
            document.getElementById('submitButton').addEventListener('click', () => {
              const form = document.querySelector('form');
              const name = (document.getElementById('name') as HTMLInputElement).value;
              const company = (document.getElementById('company') as HTMLInputElement).value;
              const subject = (document.getElementById('subject') as HTMLInputElement).value;
              const message = (document.getElementById('message') as HTMLTextAreaElement).value;
              
              const body = `Myself ${name} from ${company},\n\n${message}`;
              const mailtoUrl = `mailto:project.techpi@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
              window.location.href = mailtoUrl;
              
              // Reset the form
              form?.reset();
            });
          </script>
        </div>
        
        <div>
          <h2 class="text-3xl font-bold mb-6">Contact Information</h2>
          <div class="bg-gray-50 p-8 rounded-lg">
            <div class="space-y-6">
              <div>
                <h3 class="font-semibold text-lg mb-2">Address</h3>
                <a href={`https://maps.app.goo.gl/UffqnsTC94uSqSv97`} class="text-primary hover:text-secondary">
                  {contactInfo.address}
                </a>
              </div>
              
              <div>
                <h3 class="font-semibold text-lg mb-2">Email</h3>
                <a href={`mailto:${contactInfo.email}`} class="text-primary hover:text-secondary">
                  {contactInfo.email}
                </a>
              </div>
              
              <div>
                <h3 class="font-semibold text-lg mb-2">Phone</h3>
                <a href={`tel:${contactInfo.phone}`} class="text-primary hover:text-secondary">
                  {contactInfo.phone}
                </a>
              </div>
              
              <div>
                <h3 class="font-semibold text-lg mb-2">Working Hours</h3>
                <p class="text-gray-600">{contactInfo.workingHours}</p>
              </div>
            </div>
          </div>
          
