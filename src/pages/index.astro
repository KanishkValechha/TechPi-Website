---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ProductsPreview from '../components/ProductsPreview.astro';
import ServicesPreview from '../components/ServicesPreview.astro';
import CustomerSection from '../components/CustomerSection.astro';
import StatsSection from '../components/StatsSection.astro';

const schema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Tech PI Solutions",
  "description": "Leading CPRI approved, ISO certified manufacturer of LT Panels and Cable Trays",
  "url": "https://your-domain.com",
  "logo": "https://your-domain.com/logo.png",
  "contactPoint": {
    "@type": "ContactPoint",
    "contactType": "sales",
    "areaServed": "India",
    "location": "Hyderabad, Telangana"
  }
};
---

<Layout 
title="Home | Tech PI Solutions - Leading LT Panel & Cable Tray Manufacturer" 
description="CPRI approved, ISO certified manufacturer of LT Panels and Cable Trays. Providing superior quality products and services for industrial, commercial, and residential customers."
>
<script type="application/ld+json" set:html={JSON.stringify(schema)} />

<Hero />

<section class="relative py-16 bg-cover bg-center" style="background-image: url('../images/facility.jpg');">
  <div class="absolute inset-0 bg-black opacity-60"></div>
  <div class="container mx-auto px-12 text-center relative z-10 animate-fade-in">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <span class="text-accent/90 font-semibold tracking-wider uppercase text-sm">Why Choose Us</span>
      <h2 class="text-5xl font-bold mt-2 mb-6 text-white leading-tight">Experience Excellence with <p class="text-accent/90">Tech PI Solutions</p></h2>
      <div class="w-24 h-1 bg-accent/90 mx-auto rounded-full"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="group">
        <div class="bg-white/95 rounded-xl p-8 shadow-xl transform transition-all duration-500 hover:-translate-y-4 hover:shadow-2xl">
          <div class="relative w-16 h-16 mb-8 mx-auto">
            <div class="absolute inset-0 bg-accent/90 rounded-lg rotate-6 group-hover:rotate-12 transition-transform"></div>
            <div class="absolute inset-0 bg-primary rounded-lg flex items-center justify-center text-3xl text-white">
              üèÜ
            </div>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-primary group-hover:text-secondary transition-colors">Quality Excellence</h3>
          <p class="text-gray-600 leading-relaxed">CPRI approved and ISO certified manufacturing processes ensuring superior quality products with advanced safety features.</p>
          <div class="mt-6 h-1 w-12 bg-accent/90 group-hover:w-full transition-all duration-300 mx-auto"></div>
        </div>
      </div>

      <div class="group">
        <div class="bg-white/95 rounded-xl p-8 shadow-xl transform transition-all duration-500 hover:-translate-y-4 hover:shadow-2xl">
          <div class="relative w-16 h-16 mb-8 mx-auto">
            <div class="absolute inset-0 bg-accent/90 rounded-lg rotate-6 group-hover:rotate-12 transition-transform"></div>
            <div class="absolute inset-0 bg-primary rounded-lg flex items-center justify-center text-3xl text-white">
              üë•
            </div>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-primary group-hover:text-secondary transition-colors">Expert Leadership</h3>
          <p class="text-gray-600 leading-relaxed">Two decades of electrical industry expertise, handling complex projects with practical experience in developing unique market solutions.</p>
          <div class="mt-6 h-1 w-12 bg-accent/90 group-hover:w-full transition-all duration-300 mx-auto"></div>
        </div>
      </div>

      <div class="group">
        <div class="bg-white/95 rounded-xl p-8 shadow-xl transform transition-all duration-500 hover:-translate-y-4 hover:shadow-2xl">
          <div class="relative w-16 h-16 mb-8 mx-auto">
            <div class="absolute inset-0 bg-accent/90 rounded-lg rotate-6 group-hover:rotate-12 transition-transform"></div>
            <div class="absolute inset-0 bg-primary rounded-lg flex items-center justify-center text-3xl text-white">
              üõ†Ô∏è
            </div>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-primary group-hover:text-secondary transition-colors">Comprehensive Service</h3>
          <p class="text-gray-600 leading-relaxed">Round-the-clock technical support, installation services, personnel training, and dedicated after-sales support.</p>
          <div class="mt-6 h-1 w-12 bg-accent/90 group-hover:w-full transition-all duration-300 mx-auto"></div>
        </div>
      </div>
    </div>
    <CustomerSection class="mt-12 animate-scroll" />
    <StatsSection />
  </div>
</section>

<ProductsPreview />
<ServicesPreview />


</Layout>

<style>
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  .animate-fade-in {
    animation: fadeIn 2s ease-in-out;
  }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
  }

  .animate-scroll {
    display: flex;
    animation: scroll 20s linear infinite;
  }
</style>