---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';

const services = [
  {
    title: "Testing Services",
    description: "Comprehensive testing and certification services for electrical equipment and systems.",
    features: [
      "Factory Acceptance Testing (FAT)",
      "Physical Verification",
      "BOM Verification",
      "Torque Testing",
      "Insulation Resistance Testing",
      "High Voltage Testing"
    ],
    icon: "ðŸ”¬",
    details: [
      "Physical Verification according to the drawing",
      "Verification of all BOM in-line with drawing",
      "Torque testing as per standard",
      "Insulation Resistance of Busbar",
      "High Voltage test for Busbars",
      "Primary and Secondary Injection Testing",
      "Functional Testing with Breaker Interlocking",
      "Meters/PLC Programming"
    ]
  },
  {
    title: "Custom Manufacturing Solutions",
    description: "Tailored manufacturing solutions to meet your specific project requirements.",
    features: [
      "Custom Electrical Infrastructure",
      "Precision Engineering",
      "Specialized Equipment Design",
      "Quality Assurance"
    ],
    icon: "âš™ï¸",
    details: [
      "Custom dimensions and specifications",
      "Special material requirements",
      "Project-specific modifications",
      "Comprehensive design consultation"
    ]
  },
  {
    title: "Technical Support & Commissioning",
    description: "Expert guidance and support throughout your project lifecycle.",
    features: [
      "On-site Support",
      "System Integration",
      "Performance Optimization",
      "Ongoing Maintenance"
    ],
    icon: "ðŸ’¡",
    details: [
      "Installation support",
      "Maintenance guidance",
      "Troubleshooting assistance",
      "Detailed technical documentation"
    ]
  }
];

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "provider": {
    "@type": "Organization",
    "name": "Tech PI Solutions"
  },
  "serviceType": "Electrical Equipment Testing and Manufacturing",
  "areaServed": "Global",
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "itemListElement": services.map((service) => ({
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": service.title,
        "description": service.description
      }
    }))
  }
};
---

<Layout
  title="Tech PI Solutions - Services"
  description="Comprehensive testing, manufacturing, and technical support for electrical infrastructure projects."
>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <PageHeader
    title="Our Comprehensive Services"
    description="Precision Testing, Custom Manufacturing, and Expert Support"
    image="/images/services.jpg"
  />

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {services.map((service) => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden transform transition-all hover:scale-105 hover:shadow-2xl">
            <div class="p-6">
              <div class="flex items-center mb-4">
                <div class="text-4xl mr-4 opacity-70">{service.icon}</div>
                <h2 class="text-2xl font-bold text-gray-800">{service.title}</h2>
              </div>
              <p class="text-gray-600 mb-6">{service.description}</p>
              
              <div class="bg-blue-50 rounded-lg p-5">
                <h3 class="font-semibold text-lg mb-4 text-blue-800">Key Features:</h3>
                <ul class="space-y-2">
                  {service.features.map((feature) => (
                    <li class="flex items-center">
                      <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      <span class="text-gray-700">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <details class="mt-6 bg-gray-100 rounded-lg">
                <summary class="p-4 cursor-pointer text-gray-700 font-semibold hover:bg-gray-200 rounded-lg">
                  Detailed Service Breakdown
                </summary>
                <ul class="p-4 space-y-2 text-sm text-gray-600">
                  {service.details.map((detail) => (
                    <li class="flex items-center">
                      <svg class="w-4 h-4 text-gray-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 1.414L10.586 9H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z" clip-rule="evenodd" />
                      </svg>
                      {detail}
                    </li>
                  ))}
                </ul>
              </details>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class=" text-black py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold mb-6">Let's Collaborate on Your Next Project</h2>
      <p class="text-xl mb-8 max-w-3xl mx-auto">
        Our expert team is ready to provide comprehensive testing, custom manufacturing, 
        and technical support tailored to your unique electrical infrastructure needs.
      </p>
      <a 
        href="/contact" 
        class="inline-block bg-secondary text-white  px-10 py-4 rounded-full font-semibold hover:opacity-90 transition-colors"
      >
        Get Started Now
      </a>
    </div>
  </section>
</Layout>

<style>
  ::-webkit-scrollbar {
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background: rgb(30 59 138 / 0.8);
  border-radius: 10px;
  border: 2px solid transparent;
  background-clip: padding-box;
}

</style>