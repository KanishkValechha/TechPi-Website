---
const panels = [
  {
    id: 'power-distribution',
    name: 'Power Distribution Panels',
    image: '/images/panels/power-distribution.jpg',
    description: 'Advanced power distribution solutions for industrial applications'
  },
  {
    id: 'motor-control',
    name: 'Motor Control Panels',
    image: '/images/panels/motor-control.jpg',
    description: 'Sophisticated motor control and automation systems'
  },
  {
    id: 'apfc',
    name: 'APFC Panels',
    image: '/images/panels/apfc.jpg',
    description: 'Automatic power factor correction panels'
  },
  {
    id: 'plc',
    name: 'PLC Control Panels',
    image: '/images/panels/plc.jpg',
    description: 'Programmable logic control systems'
  }
];

const cables = [
  {
    id: 'ladder-type',
    name: 'Ladder Type Cable Trays',
    image: '/images/cables/ladder.jpg',
    description: 'Heavy-duty cable support systems'
  },
  {
    id: 'perforated',
    name: 'Perforated Cable Trays',
    image: '/images/cables/perforated.jpg',
    description: 'Ventilated cable management solutions'
  },
  {
    id: 'wire-mesh',
    name: 'Wire Mesh Cable Trays',
    image: '/images/cables/wire-mesh.jpg',
    description: 'Flexible and lightweight cable routing'
  },
  {
    id: 'channel',
    name: 'Channel Cable Trays',
    image: '/images/cables/channel.jpg',
    description: 'Enclosed cable protection systems'
  }
];
---

<section class="space-y-20">
  <!-- Panels Section -->
  <div>
    <h2 class="text-4xl font-bold mb-8">LV Panels</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {panels.map(panel => (
        <div 
          class="group relative h-[400px] overflow-hidden rounded-xl shadow-lg cursor-pointer transform hover:scale-[1.02] transition-all duration-500"
          data-aos="fade-up"
        >
          <!-- Image Container -->
          <div class="absolute inset-0">
            <img
              src={panel.image}
              alt={panel.name}
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
            />
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-100 transition-all duration-500"></div>
          </div>
          
          <!-- Content -->
          <div class="absolute inset-x-0 bottom-0 p-6 translate-y-20 group-hover:translate-y-0 transition-transform duration-500">
            <h3 class="text-xl font-bold text-white mb-2">{panel.name}</h3>
            <p class="text-white/80 text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100">
              {panel.description}
            </p>
            <div class="mt-4 flex items-center gap-2 text-accent opacity-100 transition-opacity duration-500 delay-200">
              <span class="text-sm font-semibold">Learn More</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Cable Trays Section -->
  <div>
    <h2 class="text-4xl font-bold mb-8">Cable Trays</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {cables.map(cable => (
        <div 
          class="group relative h-[400px] overflow-hidden rounded-xl shadow-lg cursor-pointer transform hover:scale-[1.02] transition-all duration-500"
          data-aos="fade-up"
        >
          <!-- Image Container -->
          <div class="absolute inset-0">
            <img
              src={cable.image}
              alt={cable.name}
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
            />
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-100 transition-all duration-500"></div>
          </div>
          
          <!-- Content -->
          <div class="absolute inset-x-0 bottom-0 p-6 translate-y-20 group-hover:translate-y-0 transition-transform duration-500">
            <h3 class="text-xl font-bold text-white mb-2">{cable.name}</h3>
            <p class="text-white/80 text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100">
              {cable.description}
            </p>
            <div class="mt-4 flex items-center gap-2 text-accent opacity-100 transition-opacity duration-500 delay-200">
              <span class="text-sm font-semibold">Learn More</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>