---
const navItems = [
  { 
    href: '/', 
    text: 'Home' 
  },
  { 
    href: '/products', 
    text: 'Products',
    dropdown: [
      { href: '/products#panels', text: 'Low Voltage Panels' },
      { href: '/products#trays', text: 'Cable Trays' },
    ]
  },
  { 
    href: '/services', 
    text: 'Services' 
  },
  { 
    href: '/projects', 
    text: 'Projects' 
  },
  { 
    href: '/about', 
    text: 'About Us',
    dropdown: [
      { href: '/about#story', text: 'Our Story' },
      { href: '/about#founders', text: 'Our Founders' },
      { href: '/about#certificates', text: 'Certificates' }
    ]
  },
  { 
    href: '/contact', 
    text: 'Contact' 
  },
];
---

<header class="bg-primary text-white fixed w-full top-0 left-0 z-[100]">
  <nav class="container mx-auto px-4 py-2">
    <div class="relative">
      <div class="flex justify-between items-center">
        <a href="/" class="flex items-center gap-4 group">
          <div class="relative">
            <div class="absolute -inset-0.5 rounded-full bg-gradient-to-r from-accent/40 to-primary/40 blur opacity-0 group-hover:opacity-100 transition duration-500"></div>
            <img 
              src="../images/logo.jpg" 
              alt="" 
              class="w-20 h-20 rounded-full relative border border-white/20 shadow-lg transform group-hover:scale-[1.02] transition duration-300"
            >
          </div>
          <div class="flex flex-col">
            <h1 class="text-3xl font-bold tracking-widest">
                <span class="headerr">TECHPi</span>
                <span class="font-medium tracking-tighter">&reg;</span>
            </h1>
            <span class="company-name text-lg text-accent/90 font-medium tracking-widest uppercase">Solutions</span>
          </div>
        </a>
        
        <!-- Hamburger Menu Button -->
        <button
          id="menuButton"
          class="md:hidden flex flex-col justify-center items-center w-8 h-8 space-y-1.5"
          aria-label="Toggle menu"
          aria-expanded="false"
        >
          <span class="w-6 h-0.5 bg-white transition-transform origin-center"></span>
          <span class="w-6 h-0.5 bg-white transition-opacity"></span>
          <span class="w-6 h-0.5 bg-white transition-transform origin-center"></span>
        </button>

        <!-- Desktop Navigation -->
        <ul class="hidden md:flex space-x-8">
          {navItems.map(item => (
            <li class="relative group">
              <a 
                href={item.href} 
                class="desktop-link hover:text-accent transition-colors duration-200 font-semibold flex items-center gap-1"
              >
                {item.text}
                {item.dropdown && (
                  <svg 
                    xmlns="http://www.w3.org/2000/svg" 
                    class="h-4 w-4 transform group-hover:rotate-180 transition-transform duration-200" 
                    fill="none" 
                    viewBox="0 0 24 24" 
                    stroke="currentColor"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                )}
              </a>
              
              {item.dropdown && (
                <div class="absolute left-0 mt-2 w-48 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform origin-top-left group-hover:translate-y-0 translate-y-2">
                  <div class="py-2 bg-primary rounded-lg shadow-xl border border-white/10">
                    {item.dropdown.map(subItem => (
                      <a
                        href={subItem.href}
                        class="desktop-link block px-4 py-2 text-sm hover:bg-white/10 hover:text-accent transition-colors duration-200 subitem-link"
                      >
                        {subItem.text}
                      </a>
                    ))}
                  </div>
                </div>
              )}
            </li>
          ))}
        </ul>
      </div>

      <!-- Redesigned Mobile Navigation -->
      <div
        id="mobileMenu"
        class="fixed inset-0 bg-black bg-opacity-50 md:hidden hidden z-[150]"
        style="backdrop-filter: blur(4px);"
      >
        <div class="fixed inset-y-0 right-0 max-w-xs w-full bg-primary shadow-lg transform transition-transform duration-300 ease-in-out translate-x-full z-[160]"
             id="slidePanel">
          <div class="flex flex-col h-full">
            <!-- Mobile Menu Header with Close Button -->
            <div class="px-6 py-4 border-b border-white/10 flex justify-between items-center">
              <h2 class="text-xl font-bold">Menu</h2>
              <button 
                id="closeButton" 
                class="p-2 hover:bg-white/10 rounded-full transition-colors"
                aria-label="Close menu"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
            
            <!-- Mobile Menu Items -->
            <nav class="flex-1 px-6 py-4 overflow-y-auto">
              <ul class="space-y-6">
                {navItems.map(item => (
                  <li>
                    <a 
                      href={item.href} 
                      class="mobile-link block text-lg hover:text-accent transition-all duration-200 transform hover:translate-x-2 font-semibold"
                      data-nav-link
                    >
                      {item.text}
                    </a>
                  </li>
                ))}
              </ul>
            </nav>
            
            <!-- Mobile Menu Footer -->
            <div class="border-t border-white/10 px-6 py-4">
              <a 
                href="/contact" 
                class="mobile-link block text-center py-3 px-4 bg-accent rounded-lg hover:bg-accent/90 transition-colors duration-200"
                data-nav-link
              >
                Contact Us
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>

<!-- Spacer to prevent content from hiding under fixed header -->
<div class=" h-20"></div>

<style>
  
  html {
    scroll-padding-top: 110px; /* Adjust based on your navbar height */
  }
  
  #menuButton span {
    transition: all 0.3s ease-in-out;
  }

  body.menu-open {
    overflow: hidden;
  }
  @font-face {
  font-family: 'Accelerator',sans-serif;
  src: url('../assets/fonts/Accelerator.woff2') format('woff2'),
    url('../assets/fonts/Accelerator.woff') format('woff'),
    url('../assets/fonts/Accelerator.otf') format('opentype'),
    url('../assets/fonts/Accelerator.ttf') format('truetype');
    font-weight: light;
  }
  @font-face {
    font-family: 'Paladins';
    src: url(../assets/fonts/paladinsstraight.ttf) format('truetype');
  }

.headerr{
  font-family: 'Paladins';
}
</style>

<script>
  function setupMobileMenu() {
    const menuButton = document.getElementById('menuButton');
    const closeButton = document.getElementById('closeButton');
    const mobileMenu = document.getElementById('mobileMenu');
    const slidePanel = document.getElementById('slidePanel');
    const menuBars = menuButton?.querySelectorAll('span');
    let isMenuOpen = false;

    function closeMenu() {
      if (!isMenuOpen) return;
      
      isMenuOpen = false;
      document.body.classList.remove('menu-open');
      
      if (slidePanel) {
        slidePanel.classList.add('translate-x-full');
      }
      
      // Wait for slide animation to complete before hiding menu
      setTimeout(() => {
        if (mobileMenu) {
          mobileMenu.classList.add('hidden');
        }
      }, 300);

      if (menuButton) {
        menuButton.setAttribute('aria-expanded', 'false');
      }
      
      if (menuBars && menuBars.length === 3) {
        menuBars[0].classList.remove('rotate-45', 'translate-y-2');
        menuBars[1].classList.remove('opacity-0');
        menuBars[2].classList.remove('-rotate-45', '-translate-y-2');
      }
    }

    function openMenu() {
      if (isMenuOpen) return;
      
      isMenuOpen = true;
      document.body.classList.add('menu-open');
      
      if (mobileMenu) {
        mobileMenu.classList.remove('hidden');
        // Small delay to ensure the menu is visible before sliding
        setTimeout(() => {
          if (slidePanel) {
            slidePanel.classList.remove('translate-x-full');
          }
        }, 10);
      }

      if (menuButton) {
        menuButton.setAttribute('aria-expanded', 'true');
      }
      
      if (menuBars && menuBars.length === 3) {
        menuBars[0].classList.add('rotate-45', 'translate-y-2');
        menuBars[1].classList.add('opacity-0');
        menuBars[2].classList.add('-rotate-45', '-translate-y-2');
      }
    }

    function toggleMenu() {
      if (isMenuOpen) {
        closeMenu();
      } else {
        openMenu();
      }
    }

    // Event Listeners
    menuButton?.addEventListener('click', toggleMenu);
    closeButton?.addEventListener('click', closeMenu);
    
    // Close menu when clicking outside
    mobileMenu?.addEventListener('click', (e) => {
      if (e.target === mobileMenu) {
        closeMenu();
      }
    });

    // Handle mobile navigation links
    const mobileLinks = document.querySelectorAll('[data-nav-link]');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        closeMenu();
      });
    });
  }

  function setupDesktopMenu() {
    // Handle desktop navigation links with offset
    const desktopLinks = document.querySelectorAll('.desktop-link');
    desktopLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        const href = link.getAttribute('href');
        const [path, hash] = href.split('#');
        if (hash) {
          e.preventDefault();
          if (window.location.pathname === path) {
            scrollToHash(hash);
          } else {
            window.location.href = href;
          }
        }
      });
    });

    // Handle hash change for offset
    window.addEventListener('hashchange', () => {
      const hash = window.location.hash.substring(1);
      if (hash) {
        scrollToHash(hash);
      }
    });

    // Handle page load with hash for offset
    window.addEventListener('load', () => {
      const hash = window.location.hash.substring(1);
      if (hash) {
        scrollToHash(hash);
      }
    });

    // Handle popstate for offset
    window.addEventListener('popstate', () => {
      const hash = window.location.hash.substring(1);
      if (hash) {
        scrollToHash(hash);
      }
    });
  }

  function scrollToHash(hash) {
    const attemptScroll = (retries = 10, delay = 100) => {
      const targetElement = document.getElementById(hash);
      if (targetElement) {
        const offset = 110; // Adjust this value based on your navbar height
        const elementPosition = targetElement.getBoundingClientRect().top;
        const offsetPosition = elementPosition + window.scrollY - offset;
        window.scrollTo({
          top: offsetPosition,
          behavior: 'smooth'
        });
      } else if (retries > 0) {
        setTimeout(() => attemptScroll(retries - 1, delay), delay);
      }
    };

    attemptScroll();
  }

  // Initialize menu on page load
  setupMobileMenu();
  setupDesktopMenu();

  // Re-initialize menu after Astro page transitions
  document.addEventListener('astro:page-load', () => {
    setupMobileMenu();
    setupDesktopMenu();
    
    // Add this to handle hash after page transition with delay
    const hash = window.location.hash.substring(1);
    if (hash) {
      scrollToHash(hash);
      setTimeout(() => {
        scrollToHash(hash);
      }, 300); // Adjust the delay as needed
    }
  });
</script>
