  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12">Our Products</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 px-16">
      {products.map(product => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="relative bg-gray-100 h-96 overflow-hidden">
            <img src={product.image} alt={product.title} class="absolute inset-0 w-full h-full object-cover" />
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-bold mb-2">{product.title}</h3>
            <p class="text-gray-600 mb-4">{product.description}</p>
            <a href="/products" class="text-primary hover:text-secondary font-semibold">Learn More â†’</a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>