<section class="relative bg-primary text-white overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-r from-primary to-secondary opacity-90"></div>
  <div class="relative container mx-auto px-4 py-32">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div data-aos="fade-right">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
          Excellence in Electrical Infrastructure
        </h1>
        <p class="text-xl mb-8 text-gray-100">
          Leading manufacturer of Cable Trays and Low Voltage Panels, delivering innovative solutions with uncompromising quality and reliability.
        </p>
        <div class="flex flex-wrap gap-4">
          <a 
            href="/products" 
            class="bg-secondary hover:bg-opacity-90 px-8 py-4 rounded-lg font-semibold text-lg transition-all transform hover:scale-105"
            data-aos="fade-up"
            data-aos-delay="200"
          >
            Explore Products
          </a>
          <a 
            href="/contact" 
            class="bg-white text-primary hover:bg-gray-100 px-8 py-4 rounded-lg font-semibold text-lg transition-all transform hover:scale-105"
            data-aos="fade-up"
            data-aos-delay="400"
          >
            Get in Touch
          </a>
        </div>
      </div>
      <div 
        class="relative hidden lg:block"
        data-aos="fade-left"
        data-aos-delay="300"
      >
        <div class="relative w-full h-[600px] rounded-lg overflow-hidden">
          <img 
            src="../images/Low-voltage(1).jpg" 
            alt="Manufacturing Facility" 
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-primary/50 to-transparent"></div>
        </div>
      </div>
    </div>
  </div>
</section>