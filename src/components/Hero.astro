<section class="relative h-screen bg-primary text-white overflow-hidden">
    <div class="absolute inset-0 moving-background"></div>
    <div class="absolute inset-0 bg-black opacity-70"></div>
    
    <div class="relative h-full container mx-auto px-4 flex items-center justify-center overflow-hidden brightness-100 text-center">
        <div class="grid grid-cols-1 place-items-center gap-12 items-center mt-22 md:mt-20 max-w-3xl mx-auto">
            <div 
                class="text-content-overlay p-8 rounded-xl bg-black/40 backdrop-blur-sm"
                data-aos="fade-right"
            >
                <h2 class="text-3xl md:text-5xl font-bold mt-2 mb-2 text-white leading-tight">
                    <span class="text-accent/90">TechPI Solutions</span>
                </h2>
                <div class="flex justify-center">
                    <div class="w-36 md:w-96 h-1 bg-accent/90 rounded-full mb-4"></div>
                </div>
                <h1 class="text-2xl md:text-6xl font-bold mb-6 leading-tight">
                    Excellence in Electrical Infrastructure
                </h1>
                <p class="text-base md:text-xl mb-8 text-gray-100">
                    Leading manufacturer of Cable Trays and Low Voltage Panels, delivering innovative solutions with uncompromising quality and reliability.
                </p>
                <div class="flex flex-wrap gap-4 justify-center">
                    <a 
                        href="/products" 
                        class="bg-secondary hover:bg-opacity-90 px-6 md:px-8 py-3 md:py-4 rounded-lg font-semibold text-base md:text-lg transition-all transform hover:scale-105"
                    >
                        Explore Products
                    </a>
                    <a 
                        href="/contact" 
                        class="bg-white text-primary hover:bg-gray-100 px-6 md:px-8 py-3 md:py-4 rounded-lg font-semibold text-base md:text-lg transition-all transform hover:scale-105"
                    >
                        Get in Touch
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .moving-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: url('../images/collage.jpg');
        background-size: cover;
        background-position: center;
        animation: slide 20s linear infinite;
    }

    .moving-background::after {
        content: "";
        position: absolute;
        top: 0;
        left: 100%;
        right: -100%;
        bottom: 0;
        background-image: url('../images/collage.jpg');
        background-size: cover;
        background-position: center;
    }

    @keyframes slide {
        0% {
            transform: translate3d(0, 0, 0);
        }
        100% {
            transform: translate3d(-100%, 0, 0);
        }
    }

    .text-content-overlay {
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }
</style>