---
const customers = [
  {
    name: "DuPont",
    logo: "../images/customers/DuPont.png",
    industry: "Chemical"
  },
  {
    name: "H & R Block",
    logo: "../images/customers/h-r-block.png",
    industry: "Professional Services"
  },
  {
    name: "Bank of America",
    logo: "../images/customers/bank.jpg",
    industry: "Banking"
  },
  {
    name: "NCR Corporation",
    logo: "../images/customers/NCR.png",
    industry: "Technology"
  },
  {
    name: "Verizon",
    logo: "../images/customers/verizon.png",
    industry: "Telecommunications"
  },
  {
    name: "Micron Technology",
    logo: "../images/customers/micron.png",
    industry: "Semiconductor"
  }
];
---

<section class="py-20 relative z-30">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-4 text-white">Trusted by Industry Leaders</h2>
    <p class="text-xl text-white text-center mb-12">Delivering excellence to companies worldwide</p>
    
    <div class="overflow-hidden">
      <div class="flex gap-8 animate-scroll">
        {customers.map((customer) => (
          <div class="flex-none w-64 bg-white bg-opacity-90 p-6 rounded-lg shadow-lg transform hover:scale-105 transition-transform duration-300">
            <div class="flex items-center justify-center mb-4">
              <img src={customer.logo} alt={customer.name} class="w-16 h-16 object-contain rounded-full" />
            </div>
            <h3 class="text-lg font-semibold text-gray-800 text-center">{customer.name}</h3>
            <p class="text-sm text-gray-500 text-center">{customer.industry}</p>
          </div>
        ))}
        {customers.map((customer) => (
          <div class="flex-none w-64 bg-white bg-opacity-90 p-6 rounded-lg shadow-lg transform hover:scale-105 transition-transform duration-300">
            <div class="flex items-center justify-center mb-4">
              <img src={customer.logo} alt={customer.name} class="w-16 h-16 object-contain rounded-full" />
            </div>
            <h3 class="text-lg font-semibold text-gray-800 text-center">{customer.name}</h3>
            <p class="text-sm text-gray-500 text-center">{customer.industry}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-scroll {
    animation: scroll 30s linear infinite;
  }
</style>