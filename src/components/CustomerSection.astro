---
const customers = [
  {
    name: "DuPont",
    logo: "/images/customers/dupont.svg",
    industry: "Chemical"
  },
  {
    name: "H & R Block",
    logo: "/images/customers/hrblock.svg",
    industry: "Professional Services"
  },
  {
    name: "Bank of America",
    logo: "/images/customers/bofa.svg",
    industry: "Banking"
  },
  {
    name: "NCR Corporation",
    logo: "/images/customers/ncr.svg",
    industry: "Technology"
  },
  {
    name: "Verizon",
    logo: "/images/customers/verizon.svg",
    industry: "Telecommunications"
  },
  {
    name: "Micron Technology",
    logo: "/images/customers/micron.svg",
    industry: "Semiconductor"
  }
];
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-4">Trusted by Industry Leaders</h2>
    <p class="text-xl text-gray-600 text-center mb-12">Delivering excellence to companies worldwide</p>
    
    <div class="overflow-hidden">
      <div class="flex animate-scroll gap-8">
        {customers.map((customer) => (
          <div class="flex-none w-64">
            <div class="bg-white p-6 rounded-lg shadow-md h-32 flex items-center justify-center">
              <div class="text-center">
                <div class="w-16 h-16 bg-gray-200 rounded-full mx-auto mb-3 flex items-center justify-center">
                  <span class="text-2xl font-bold text-primary">{customer.name[0]}</span>
                </div>
                <h3 class="font-semibold text-gray-800">{customer.name}</h3>
                <p class="text-sm text-gray-500">{customer.industry}</p>
              </div>
            </div>
          </div>
        ))}
        {customers.map((customer) => (
          <div class="flex-none w-64">
            <div class="bg-white p-6 rounded-lg shadow-md h-32 flex items-center justify-center">
              <div class="text-center">
                <div class="w-16 h-16 bg-gray-200 rounded-full mx-auto mb-3 flex items-center justify-center">
                  <span class="text-2xl font-bold text-primary">{customer.name[0]}</span>
                </div>
                <h3 class="font-semibold text-gray-800">{customer.name}</h3>
                <p class="text-sm text-gray-500">{customer.industry}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-256px * 6));
    }
  }

  .animate-scroll {
    animation: scroll 60s linear infinite;
  }
</style>